@model List<SuperCube3D_MVC.Models.ScoreViewModel>

@{
    ViewBag.Title = "Scores";
}

<h2>Scores</h2>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th></th>
            <th>Score</th>
            <th>Player</th>
            <th>Date</th>
        </tr>
        @foreach(var score in Model)
        {
            <tr>
                <td>@(Model.IndexOf(score) + 1)</td>
                <td>@score.Result</td>
                <td>@score.Player.UserName</td>
                <td>@score.Date.ToString("dd MMMM yyyy")</td>
            </tr>
        }
    </table>
}
else
{
    <span>No results yet...</span>
}
